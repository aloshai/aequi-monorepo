# Root .env.example — copy to .env and fill in values

# ─── Node ───────────────────────────────────────────────
NODE_ENV=development

# ─── Server ─────────────────────────────────────────────
PORT=3000
HOST=0.0.0.0
CORS_ORIGIN=http://localhost:5173

# ─── Rate Limiting ──────────────────────────────────────
RATE_LIMIT_MAX=120
RATE_LIMIT_WINDOW=1 minute

# ─── RPC Endpoints (comma-separated) ───────────────────
RPC_URL_ETH=https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY
RPC_URL_ETH_FALLBACK=
BSC_RPC_URL=https://bsc-dataseed.binance.org
BSC_RPC_URL_FALLBACK=

# ─── DEX Overrides (optional) ──────────────────────────
# UNISWAP_V2_FACTORY=0x5C69bEe701ef814a2B6a3EDD4B1652CB9cc5aA6f
# UNISWAP_V2_ROUTER=0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D

# ─── Executor Contracts ─────────────────────────────────
# AEQUI_EXECUTOR_ETH=
AEQUI_EXECUTOR_BSC=0x03cbBc27784c64FC4A6f11eFe8D1C3b4Dee204EA
EXECUTOR_INTERHOP_BUFFER_BPS=10

# ─── Swap ───────────────────────────────────────────────
SWAP_QUOTE_TTL_SECONDS=15

# ─── Routing ────────────────────────────────────────────
MAX_HOP_DEPTH=2
ENABLE_SPLIT_ROUTING=true
MAX_SPLIT_LEGS=3

# ─── Frontend (apps/web) ───────────────────────────────
VITE_API_BASE_URL=http://localhost:3000
